                <Border Width="120"
                        Height="65"
                        Margin="100,0,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#FFFF" Offset="0.0"/>
                            <GradientStop Color="#FFFF" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,120,65"/>
                    </Border.Clip>

                    <Image Width="100" 
                           Height="65" 
